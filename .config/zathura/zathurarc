# open in dark mode
set recolor true

# auto adjustment
set adjust-open "width"

# space between pages
set page-padding 10

# scroll-step

# Switch back to normal mode 
map <Esc> abort

# previous page
map <C-h> navigate previous

# next page
map <C-l> navigate next

# switch between dark and light mode
map i recolor

# zoom in
map <C-i> zoom in

# zoom out
map <C-o> zoom out

# hide or show status bar 
map s toggle_statusbar

# hide or show input bar 
map m toggle_inputbar
 
# fit page width
map w adjust_window width

# best fit page
map b adjust_window best-fit

# full screen
# map f toggle_fullscreen

# reload
map r reload

# rotate
map R rotate

# print
map p print

# index
map <Tab> index_navigate 

